<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/btnback"
        >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/btnback"
    android:padding="15dp"
    tools:context=".activity.AddBanzenaActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="اضافة محطة جديدة"
        android:layout_margin="36dp"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:layout_gravity="center"
        android:gravity="center"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/banzenaName"
        android:background="@drawable/login_input_drawable"
        android:padding="20dp"
        android:hint="اسم المحطه"
        android:layout_marginTop="16dp"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/banzenaOhda"
        android:background="@drawable/login_input_drawable"
        android:padding="20dp"
        android:hint="اسم العهده"
        android:layout_marginTop="16dp"

        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/banzenaOils"
        android:background="@drawable/login_input_drawable"
        android:padding="20dp"
        android:hint="عقد المحطه من الزيوت "
        android:layout_marginTop="16dp"
   android:inputType="number"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mapid"
        android:text="  موقع المحطه على الخريطة"
        android:layout_margin="36dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:gravity="center"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/banzenaTanks"
        android:background="@drawable/login_input_drawable"
        android:padding="20dp"
        android:hint="عدد التانك المحطه "
        android:layout_marginTop="16dp"
        android:inputType="number"

        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addBanzena"
        android:background="@drawable/login_input_drawable"
        android:padding="20dp"
        android:text="اضافة"
        android:layout_marginTop="16dp"
        android:inputType="number"

        />


</LinearLayout>
    </ScrollView>

</layout>
